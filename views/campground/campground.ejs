<% include ../partials/header %>



<div class="container">
<header class="jumbotron">
    <h1>Welcome to YelpCamp</h1> 
    <p>View our hand-picked Camp Ground</p>
    <p>
        <a class="btn btn-primary btn-lg" href="/campground/new">Add new CampGround</a>
    </p>
</header>





<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% camps.forEach(function(camp){ %>
    <div class="col-md-3 col-sm-6 col-lg-3 col-xl-3">
        
        <div class="thumbnail">
           <img src="<%= camp.image%>">
       
       
       <div class="caption">
            <h4> <%=camp.name%> </h4>
        </div>
        <a href="/campground/<%= camp._id %>" class="btn btn-primary">More info</a>
        </div>
    </div>


<% }); %>
</div>
</div>

<% include ../partials/footer %>